<?xml version="1.0" encoding="UTF-8"?>
<auth>
    <step step="1">
        <action>openURI</action>
        <params>
            <url>https://shorinji-kempo.org.ua</url>
        </params>
        <description>Open Home page</description>

    </step>
    <Step step="2">
        <action>setValue</action>
        <params>
            <selector>modlgn-username</selector>
            <value>Виталик</value>
        </params>
        <description>write valid value in input field Login</description>

    </Step>
    <Step step="3">
        <action>setValue</action>
        <params>
            <selector>modlgn-passwd</selector>
            <value>20101988</value>
        </params>
        <description>write valid value in input field Password</description>

    </Step>
    <Step step="4">
        <action>click</action>
        <params>
            <selector>Submit</selector>
        </params>
        <description>Click btn Login</description>
    </Step>
</auth>